.card {
  background: white;
  border-radius: 16px;
  padding: 20px;
  margin: 8px 0;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  border: 1px solid #e5e7eb;
  min-height: 320px;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
  border-color: #6366f1;
}

.content {
  display: flex;
  flex-direction: column;
  height: 100%;
  flex: 1;
  gap: 16px;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-shrink: 0;
  gap: 12px;
}

.taskHeader {
  display: flex;
  align-items: center;
  gap: 16px;
  flex: 1;
}

.taskIdContainer {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.taskPrefix {
  font-size: 12px;
  color: #6b7280;
  font-weight: 500;
}

.taskNumber {
  font-weight: 700;
  color: #111827;
  font-size: 22px;
  line-height: 1;
}

.priorityContainer {
  display: flex;
  align-items: center;
  gap: 10px;
}

.priorityCircle {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  border: 2px solid;
  flex-shrink: 0;
}

.priorityLabel {
  font-size: 14px;
  font-weight: 600;
  color: #374151;
  white-space: nowrap;
}

.statusCompleted {
  color: #10b981;
  font-weight: 600;
  font-size: 14px;
  background: linear-gradient(135deg, #d1fae5, #a7f3d0);
  padding: 6px 14px;
  border-radius: 8px;
  display: inline-block;
  border: 1px solid #10b981;
  white-space: nowrap;
  flex-shrink: 0;
}

.statusPending {
  color: #f59e0b;
  font-weight: 600;
  font-size: 14px;
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  padding: 6px 14px;
  border-radius: 8px;
  display: inline-block;
  border: 1px solid #f59e0b;
  white-space: nowrap;
  flex-shrink: 0;
}

.info {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.title {
  font-size: 20px;
  font-weight: 700;
  color: #111827;
  line-height: 1.3;
  margin: 0;
}

.descriptionContainer {
  background: #f0f9ff;
  border-radius: 10px;
  padding: 16px;
  border: 1px solid #bae6fd;
  flex: 1;
  margin-top: 12px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.descriptionLabel {
  font-size: 13px;
  color: #6b7280;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.description {
  font-size: 14px;
  color: #374151;
  line-height: 1.5;
  margin: 4px 0 0 0;
  flex: 1;
  display: block;
  min-height: 40px;
}

